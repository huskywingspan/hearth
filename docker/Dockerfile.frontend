# Multi-stage build — frontend is static files after build (no Node.js server).
# Production strategy: copy dist/ into Caddy's file_server root.

FROM node:22-alpine AS builder
WORKDIR /build
COPY frontend/package*.json ./
RUN npm ci
COPY frontend/ ./
RUN npm run build

# Static files — served by Caddy via file_server
FROM scratch
COPY --from=builder /build/dist /frontend-dist
